{
  "name": "Ring Hass.io Addon",
  "version": "3.0",
  "slug": "ring-mqtt",
  "description": "Ring Device Integration via MQTT (https://github.com/tsightler/ring-mqtt)",
  "startup": "before",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "host_network": true,
  "webui": "https://[HOST]:[PORT:55123]",
  "options": {
    "host": "localhost",
    "port": 1883,
    "ring_topic": "ring",
    "hass_topic": "hass/status",
    "mqtt_user": "<mqtt_or_ha_user>",
    "mqtt_pass": "<mqtt_or_ha_password>",
    "ring_token": "",
    "enable_cameras": false,
    "location_ids": [""]
  },
  "schema": {
   "host": "str",
    "port": "port",
    "ring_topic": "str",
    "hass_topic": "str",
    "mqtt_user": "str",
    "mqtt_pass": "str",
    "ring_token": "str",
    "enable_cameras": "bool",
    "location_ids": ["str"]  
  }
}
